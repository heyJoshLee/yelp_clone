%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @business, html: {id: "add_business"} do |f|
        %form.form-horizontal
          %header
            %h1 Add Business
          %fieldset
            = f.text_field :name
            = f.url_field :url
            = f.select :category_id, options_for_select(category_dropdown_options)
            = f.select :state_code, options_for_select(states_and_state_codes_array)
            = f.text_field :zip_code, maxlength: 5
            = f.text_area :description
          %fieldset.actions.control-group.col-sm-offset-2
            .controls
              =f.submit "Add business", class: "btn btn-primary"
