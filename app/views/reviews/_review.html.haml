.col-sm-12
  .thumbnail
    .caption
      - if show_business_name ||= false
        = link_to business_path(review.business) do
          %h2 #{review.business.name}
      %h3 #{review.title}
      - review.rating.times do 
        %i.glyphicon.glyphicon-star
      %p= review.body
      %small By: 
      = link_to review.user.username, user_path(review.user)
