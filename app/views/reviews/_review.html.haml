.col-sm-6.col-md-4
  .thumbnail
    .caption
      - if show_business_name ||= false
        = link_to business_path(review.business) do
          %h2 #{review.business.name} | #{review.rating}
      %h3 #{review.title} #{show_business_name ? "" : "| " + review.rating.to_s}
      %p= review.body
      %small By: 
      = link_to review.user.username, user_path(review.user)
